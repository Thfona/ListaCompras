<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity">

    <EditText
        android:id="@+id/nomeEdt"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cancelarBtn"
        android:layout_alignLeft="@+id/cancelarBtn"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/nome_txt"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/qtdEdt"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nomeEdt"
        android:layout_alignLeft="@+id/nomeEdt"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:hint="@string/qtd_txt"
        android:inputType="number" />

    <Button
        android:id="@+id/cancelarBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_background"
        android:text="@string/cancelar_btn" />

    <Button
        android:id="@+id/confirmarBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cancelarBtn"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:textColor="@android:color/white"
        android:background="@drawable/confirmarbutton_background"
        android:text="@string/confirmar_btn" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemViewActivity">

    <ImageButton
        android:id="@+id/cancelarBtn"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="228dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_dark"
        android:contentDescription="@stringAdicionar"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaDeComprasListView"
        app:srcCompat="@drawable/cancelar" />

    <ImageButton
        android:id="@+id/confirmarBtn"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_green_dark"
        android:contentDescription="@stringAdicionar"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaDeComprasListView"
        app:srcCompat="@drawable/confirmar" />
</android.support.constraint.ConstraintLayout>